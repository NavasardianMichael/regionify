{
  "name": "regionify",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm run --parallel --filter @regionify/client --filter @regionify/server dev",
    "dev:client": "pnpm --filter @regionify/client dev",
    "dev:server": "pnpm --filter @regionify/server dev",
    "build": "pnpm run --filter @regionify/shared typecheck && pnpm run --parallel --filter @regionify/client --filter @regionify/server build",
    "build:client": "pnpm --filter @regionify/client build",
    "build:server": "pnpm --filter @regionify/server build",
    "lint": "pnpm run --parallel -r lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm run --parallel -r typecheck",
    "prepare": "husky",
    "db:generate": "pnpm --filter @regionify/server db:generate",
    "db:migrate": "pnpm --filter @regionify/server db:migrate",
    "db:push": "pnpm --filter @regionify/server db:push",
    "db:studio": "pnpm --filter @regionify/server db:studio"
  },
  "lint-staged": {
    "*.{ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "~5.9.3"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^19.2.5",
      "@types/react-dom": "^19.2.3"
    }
  }
}
